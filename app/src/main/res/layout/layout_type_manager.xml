<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33474f"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/new_type"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rec_shape"
            android:gravity="center"
            android:hint="Nhập tên kiểu mới"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_add_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thêm" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_all_type"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rec_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Đang chọn:"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.05"
            android:background="@drawable/rec_shape"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Tên Mới:"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/new_type_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rec_shape"
            android:gravity="center"
            android:hint="Tên mới"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_upd_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Cập nhật tên kiểu" />

    <Button
        android:id="@+id/btn_del_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Xóa kiểu" />

    <Button
        android:id="@+id/btn_cancel_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Quay lại" />

</LinearLayout>